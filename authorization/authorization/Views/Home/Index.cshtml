@model List<authorization.Models.Apartment>
@{
    ViewData["Title"] = "Apartments";
}
<div class="m-1 p-1">
    <h2>Here is a list of apartments for sale</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr><th>№</th><th>Number Of Rooms</th><th>Space</th><th>Level</th><th>Number Of Storeys</th><th>Adres</th><th>Price</th></tr>
        </thead>
        <tbody>
            @{int i = 1;}
            @foreach (authorization.Models.Apartment a in Model)
            {
<tr>
    <td>@i</td>
    <td>@a.NumberOfRooms</td>
    <td>@a.Space.ToString("#0.00")</td>
    <td>@a.Level</td>
    <td>@a.NumberOfStoreys</td>
    <td>@a.Adres</td>
    <td>@a.Price.ToString("c")</td>
</tr>
i += 1;
}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.Count().ToString()
                </td>
            </tr>
        </tfoot>
    </table>
</div>
