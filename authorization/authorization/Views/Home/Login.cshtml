@model authorization.Models.LoginUser
@{
    ViewData["Title"] = "Login";
}

<style type="text/css">
    /* Styles for validation helpers*/
    .field-validation-error {
        color: #ff0000;
    }

    .field-validation-valid {
        display: none;
    }

    .input-validation-error {
        border: 1px solid #ff0000 !important;
        background-color: #ffeeee !important;
    }

    .validation-summary-errors {
        font-weight: bold !important;
        color: #ff0000 !important;
    }

    .validation-summary-valid {
        display: none;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <section>
            <form id="account" method="post" asp-action="Login">
                <h4>Use a system administrator account</h4>
                <hr />

                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="User">User Portal*:</label>
                    <div><span asp-validation-for="User" class="text-danger"></span></div>
                    <input class="form-control" asp-for="User" placeholder="your name" maxlength="20" />
                </div><br />
                <div class="form-group">
                    <label asp-for="Password">Password*:</label>
                    <div><span asp-validation-for="Password" class="text-danger"></span></div>
                    <input class="form-control" type="password" placeholder="your password" asp-for="Password" maxlength="20" />
                </div><br />
                <div class="form-group">
                    <div><span asp-validation-for="CaptchaCode" class="text-danger"></span></div>
                    <img id="img-captcha" src="~/captcha-image-login" /><br>
                    <p>
                        <strong>Введите код, показанный выше:</strong><br>
                        <input type="text" class="form-control" placeholder="Security code" autocomplete="off" asp-for="CaptchaCode" maxlength="6" />
                    </p>
                    <p>
                        <em>(Note: If you cannot read the numbers in the above image, please reload the page to create a new one.)</em>
                    </p>
                </div>

                <p>
                    <em>Fields marked with * are required.</em><br />
                    <em>Username is case sensitive.</em>
                </p>
                <div class="form-group">
                    <button id="login-submit" type="submit" class="btn btn-primary">To come in</button>
                </div>
            </form>
        </section>
    </div>

</div>