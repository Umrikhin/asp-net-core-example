@model crud_simple.Models.Apartment
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form for filling in data</title>
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.css" />
    <style type="text/css">
        /* Styles for validation helpers*/
        .field-validation-error {
            color: #ff0000;
        }

        .field-validation-valid {
            display: none;
        }

        .input-validation-error {
            border: 1px solid #ff0000 !important;
            background-color: #ffeeee !important;
        }

        .validation-summary-errors {
            font-weight: bold !important;
            color: #ff0000 !important;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
</head>
<body>
    <div class="m-2">
        <div class="text-center"><h4>Apartment</h4></div>
        <form class="p-1" asp-action="SaveApartment" method="post">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label>Number Of Rooms?</label>
                <select class="form-control" asp-for="NumberOfRooms">
                    <option value="-1">Choose an value</option>
                    <option value="1">1 room</option>
                    <option value="2">2 room</option>
                    <option value="3">3 room</option>
                    <option value="4">4 room</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Space">Space:</label>
                <input class="form-control" asp-for="Space" />
            </div>
            <div class="form-group">
                <label asp-for="Level">Level:</label>
                <input class="form-control" asp-for="Level" />
            </div>
            <div class="form-group">
                <label asp-for="NumberOfStoreys">Number Of Storeys:</label>
                <input class="form-control" asp-for="NumberOfStoreys" />
            </div>
            <div class="form-group">
                <label asp-for="Adres">Adres:</label>
                <input class="form-control" asp-for="Adres" />
            </div>
            <div class="form-group">
                <label asp-for="Price">Price:</label>
                <input class="form-control" asp-for="Price" />
            </div>
            <br>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">
                    Save
                </button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</body>
</html>