@model crud_ajax.Models.Apartment
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css" />
    <title>Apartments</title>
    <style>
        .grid_action {
            width: 250px;
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
        }
    </style>

    <script src="~/jquery/dist/jquery.js"></script>
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <script src="~/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.js"></script>
    <script src="~/scripts/apartament.js"></script>

</head>
<body>
    <div class="m-1 p-1">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Apartment</button><br /><br />
        <table class="table table-striped table-bordered">
            <thead>
                <tr><th>№</th><th>Number Of Rooms</th><th>Space</th><th>Level</th><th>Number Of Storeys</th><th>Adres</th><th>Price</th><th>Action</th></tr>
            </thead>
            <tbody class="tbody">
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="7" class="text-right">Total:</td>
                    <td class="text-right total">
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>


    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Apartment Data</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="alert alert-danger msg-error"></div>
                        <input name="ID" type="hidden" asp-for="ID" />
                        <div class="form-group">
                            <label asp-for="NumberOfRooms">Number Of Rooms?</label>
                            <select name="NumberOfRooms" class="form-control" asp-for="NumberOfRooms">
                                <option value="-1">Choose an value</option>
                                <option value="1">1 room</option>
                                <option value="2">2 room</option>
                                <option value="3">3 room</option>
                                <option value="4">4 room</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Space">Space:</label>
                            <input name="Space" class="form-control" asp-for="Space" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Level">Level:</label>
                            <input name="Level" class="form-control" asp-for="Level" />
                        </div>
                        <div class="form-group">
                            <label asp-for="NumberOfStoreys">Number Of Storeys:</label>
                            <input name="NumberOfStoreys" class="form-control" asp-for="NumberOfStoreys" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Adres">Adres:</label>
                            <input name="Adres" class="form-control" asp-for="Adres" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Price">Price:</label>
                            <input name="Price" class="form-control" asp-for="Price" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
                </div>
            </div>
    </div>
</body>
</html>
